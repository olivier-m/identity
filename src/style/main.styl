// Configuration
//
$color_base    ?= #2a2a2e
$color_base_bg ?= #fff

$color_gray         ?= #b1b1b3
$color_gray_dark    ?= #737373
$color_gray_darker  ?= #4a4a4f
$color_gray_light   ?= #d7d7db
$color_gray_lighter ?= #ededf0

$color_link       ?= #0a84ff
$color_link_hover ?= #0060df

$color_green ?= #12bc00
$color_orange ?= #ff9400
$color_magenta ?= #b5007f

// Fonts and vertical distribution
$base_font_size  ?= 14px
$line_height     ?= 1.5

// Sunrise base
@require "sunrise-css/src/core/base"
@require "sunrise-css/src/modules/badges"


// Main styles
//
h2
    font-weight normal
    color $color_gray_darker

h3
    font-weight normal
    color $color_gray_darker


#page
    //

#nav
    position sticky
    top 0
    z-index 1000
    background-color $color_gray_lighter

    ul
        display flex
        flex-direction row
        justify-content flex-start
        margin 0
        padding 0 0 0 remsize(get_line_height()/2)
        list-style none

        li
            display block
            margin 0 remsize(get_line_height()/2) 0 0
            padding 0

            a
                display block
                padding remsize(get_line_height()/4) 0
                color $color_base
                font-weight bold

            &.active
                border-bottom 2px solid $color_link


#main
    margin 0 remsize(get_line_height()/2)
    padding remsize(get_line_height()) 0


button
    background $color_link
    color $color_base_bg
    border-radius 1em
    border none
    padding 0.2rem 0.7em
    font-weight normal
    line-height remsize(get_line_height() - 0.4)

    &:focus
    &:hover
        background-color $color_link_hover
        color $color_base_bg


button.delete-btn
    background transparent
    color #a4000f

    svg
        display inline-block
        height 1.9rem
        vertical-align sub
        fill #a4000f

    &.delete-confirm
        background #a4000f
        color #fff

        svg
            fill #fff

.containers-wrapper
    display grid
    grid-template-columns remsize(18rem) 1fr
    grid-gap remsize(get_line_height())
    min-height 100vh

.container-list
    border-right 1px solid $color_gray_light
    margin 0 0 0 0
    padding 0
    list-style none

    li
        display block
        margin 0
        padding 0
        font-weight bold

        a
            display block
            line-height 3rem
            padding remsize(get_line_height()/2) 0

            &:hover
                border-right 2px solid #000
                background-color $color_gray_lighter

        &.active
            a
                border-right 2px solid #000

        .container-icon
            background-color $color_gray
            display inline-block
            height 3rem
            width 3rem
            border-radius 50%
            vertical-align top
            padding 0.6rem

            svg
                display block
                height 100%
                width auto
                fill #fff

            img
                display block
                height 100%
                width auto
                filter invert(100%)

.domain-list
    h3
        font-size $base_font_size
        line-height get_line_height()
        margin 0
        position static

    svg
        height 1em
        width auto

    .list-actions
        display flex
        flex-direction row
        justify-content space-between
        margin-bottom remsize(get_line_height())

        .list-action-toggle button
            background transparent
            color $color_link

            &:focus, &:hover
                background $color_link
                color $color_base_bg

    .domain
        border-bottom 1px solid $color_gray_light

        .domain-info
            display flex
            flex-direction row
            justify-content flex-start
            align-items baseline
            padding remsize(get_line_height() /4) 0

            h3
                flex-grow 1
                cursor pointer

            .opener
                height 1.6rem
                vertical-align sub
                fill $color_gray

        .cookie-details
            display flex
            flex-direction row
            justify-content flex-start
            padding remsize(get_line_height()/2) 0 remsize(get_line_height()/2) 1em
            border-bottom 1px solid $color_gray_lighter

            &:last-child
                border none

            .cookie-name
                font-weight normal
                padding 0.2rem 0.5rem
                background $color_gray_dark
                color white
                border-radius 3px

            .cookie-info
                flex-grow 1

            .icon
                display inline-block
                vertical-align baseline
                line-height 1.6rem
                height 2rem
                margin-left 0.3rem

                svg
                    display inline-block
                    height 1.8rem
                    width auto
                    line-height 2rem
                    vertical-align middle
                    fill $color_green

                &.warning
                    svg
                        fill $color_orange

            .cookie-expires
                font-style italic

            .cookie-limits
                display block

                span
                    display block

                strong
                    color: $color_magenta

        .domain-info,
        .cookie-details
            .delete-btn
                visibility hidden

            &:hover, &:focus
                background-color $color_gray_lighter

                .delete-btn
                    visibility visible
